# =============================================================================
# OCI Credentials - Get these from Oracle Cloud Console
# =============================================================================

# Your tenancy OCID (found in Profile > Tenancy)
tenancy_ocid = "ocid1.tenancy.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Your user OCID (found in Profile > User Settings)
user_ocid = "ocid1.user.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# API key fingerprint (shown when you add the API key)
fingerprint = "xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx:xx"

# Path to your OCI API private key
private_key_path = "~/.oci/oci_api_key.pem"

# Region (choose closest to you)
# Common regions: us-ashburn-1, us-phoenix-1, eu-frankfurt-1, uk-london-1, ap-tokyo-1
region = "us-ashburn-1"

# Compartment to create resources in (can use tenancy OCID for root compartment)
compartment_ocid = "ocid1.compartment.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# =============================================================================
# Compute Configuration
# =============================================================================

# Free tier shape (Always Free)
instance_shape = "VM.Standard.E2.1.Micro"

# Or use ARM-based Ampere (more resources, also Always Free)
# instance_shape = "VM.Standard.A1.Flex"
# instance_ocpus = 1
# instance_memory_gb = 6

# Leave empty to use latest Oracle Linux 8 (recommended for RHCSA practice)
# Or specify your own RHEL image OCID
os_image_id = ""

# =============================================================================
# Session Configuration (set by the application)
# =============================================================================

# Unique session ID (generated by app)
session_id = "test-session-001"

# Timeout in minutes
session_timeout_minutes = 30

# Optional: Your SSH public key (leave empty to auto-generate)
ssh_public_key = ""
