# OCI Configuration for RHCSA Practice Labs
# Copy this file to terraform.tfvars and fill in your values
#
# To get these values:
# 1. Log into OCI Console: https://cloud.oracle.com
# 2. Profile icon → User Settings → API Keys → Add API Key
# 3. Copy the configuration snippet shown

# Your tenancy OCID (from OCI Console → Administration → Tenancy Details)
tenancy_ocid = "ocid1.tenancy.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# Your user OCID (from OCI Console → Profile → User Settings)
user_ocid = "ocid1.user.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"

# API key fingerprint (shown when you add the API key)
fingerprint = "aa:bb:cc:dd:ee:ff:00:11:22:33:44:55:66:77:88:99"

# Path to your OCI API private key
private_key_path = "~/.oci/oci_api_key.pem"

# OCI region (e.g., us-ashburn-1, eu-frankfurt-1, ap-tokyo-1)
region = "us-ashburn-1"

# Compartment OCID (use tenancy_ocid for root compartment, or create a new compartment)
compartment_ocid = "ocid1.compartment.oc1..aaaaaaaaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
